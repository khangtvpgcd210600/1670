@model BookStoreMVC.Models.Cart

@{
    ViewData["Title"] = "Cart";
}

<h2>Cart</h2>

@if (!Model.CartItems.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Book</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.Book.Name</td>
                    <td>@item.Quantity</td>
                    <td>$@item.Book.Price</td>
                    <td>$@(item.Quantity * item.Book.Price)</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3"></td>
                <td><strong>Total: </strong></td>
                <td>$@Model.Price</td>
            </tr>
        </tfoot>
    </table>

    <div class="text-center">
        <a asp-action="Checkout" class="btn btn-primary">Checkout</a>
    </div>
}
